<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title></title>
    </head>
    <body>
        <h1>Departments</h1>
        {% if departments is not empty %}
            <ul>
                {% for department in departments %}
                    <li><a href='/departments/{id}'>{{department.getName}}</a></li>
                {% endfor %}
            </ul>
        {% else %}
            <p>Oh no, no departments!</p>
        {% endif %}

        <h2>Add New Department</h2>
        <form action="/departments" method="post">
            <label for="name">Name:</label>
            <input type="text" name="name">
            <button type="submit" name="button">Add Department</button>
        </form>
        <a href='/'>Home</a>
    </body>
</html>
